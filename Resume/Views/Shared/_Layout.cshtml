<!DOCTYPE html>
<html class="no-js" lang="zh-TW">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Hsu-Hui-Ting's Resume</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body id="top">
    <!-- header
    ================================================== -->
    <header class="s-header">

        <div class="header-logo">
            <a class="site-logo" href="@Url.Action("Index","Home")"><img src="Images/logo.svg" alt="Homepage"></a>
        </div>

        <nav class="header-nav-wrap">
            <ul class="header-nav">
                <li class="current">@Html.ActionLink("Home", "#home", "Home", null, new { @class = "smoothscroll" })</li>
                <li>@Html.ActionLink("About", "#about", "Home", null, new { @class = "smoothscroll" })</li>
                <li>@Html.ActionLink("Works", "#works", "Home", null, new { @class = "smoothscroll" })</li>
                <li>@Html.ActionLink("Contact", "#contact", "Home", null, new { @class = "smoothscroll" })</li>
            </ul>
        </nav>

        <a class="header-menu-toggle" href="#0"><span>Menu</span></a>

    </header> <!-- end s-header -->
    <div>
        @RenderBody()
        <hr />
    </div>
        <!-- footer
        ================================================== -->
        <footer>
            <div class="row" style="display:none;">
                <div class="col-full">

                    <div class="footer-logo">
                        <a class="footer-site-logo" href="#0"><img src="Images/logo.png" alt="Homepage"></a>
                    </div>

                    <ul class="footer-social">
                        <li>
                            <a href="#0">
                                <i class="im im-facebook" aria-hidden="true"></i>
                                <span>Facebook</span>
                            </a>
                        </li>
                        <li>
                            <a href="#0">
                                <i class="im im-instagram" aria-hidden="true"></i>
                                <span>Instagram</span>
                            </a>
                        </li>
                    </ul>

                </div>
            </div>

            <div class="row footer-bottom">

                <div class="col-twelve">
                    <div class="copyright">
                        <span>&copy; @DateTime.Now.Year - Hui-Ting Hsu's Resume</span>
                        <span>Design by <a href="https://www.styleshout.com/">styleshout</a></span>
                    </div>

                    <div class="go-top">
                        <a class="smoothscroll" title="Back to Top" href="#top"><i class="im im-arrow-up" aria-hidden="true"></i></a>
                    </div>
                </div>

            </div> <!-- end footer-bottom -->

        </footer> <!-- end footer -->
   

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/main")
    @RenderSection("scripts", required: false)
</body>
</html>
